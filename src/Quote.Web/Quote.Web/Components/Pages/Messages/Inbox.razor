@page "/messages"
@inject MessagesService MessagesService
@inject SignalRService SignalR
@inject AuthStateService AuthState
@inject NavigationManager Navigation
@implements IAsyncDisposable
@rendermode InteractiveAuto

<PageTitle>Messages - Quote</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <p class="text-uppercase text-muted fw-semibold mb-1 small">Your inbox</p>
            <h2 class="mb-0">Messages</h2>
        </div>
        @if (AuthState.IsAuthenticated)
        {
            <span class="badge @(isConnected ? "bg-success" : "bg-warning")">
                <i class="bi @(isConnected ? "bi-wifi" : "bi-wifi-off")"></i>
                @(isConnected ? "Live" : "Connecting...")
            </span>
        }
    </div>

    @if (!AuthState.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <h5 class="alert-heading">Sign in required</h5>
            <p class="mb-0">Please <a href="/login">sign in</a> to view your messages.</p>
        </div>
    }
    else if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (conversations == null || !conversations.Any())
    {
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="bi bi-chat-dots display-1 text-muted"></i>
                <h4 class="mt-3">No conversations yet</h4>
                <p class="text-muted">When you submit quotes or receive messages, they'll appear here.</p>
                @if (AuthState.IsTradie)
                {
                    <a href="/jobs" class="btn btn-primary mt-2">Browse Jobs</a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8 col-xl-6 mx-auto">
                <div class="list-group">
                    @foreach (var convo in conversations)
                    {
                        <a href="/messages/@convo.Id" class="list-group-item list-group-item-action @(convo.UnreadCount > 0 ? "list-group-item-primary" : "")">
                            <div class="d-flex align-items-center">
                                <div class="avatar me-3">
                                    @(convo.OtherPartyName?.Substring(0, 1).ToUpper() ?? "?")
                                </div>
                                <div class="flex-grow-1 min-width-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0 text-truncate @(convo.UnreadCount > 0 ? "fw-bold" : "")">@convo.OtherPartyName</h6>
                                        <small class="text-muted ms-2">@FormatTime(convo.LastMessageAt)</small>
                                    </div>
                                    <small class="text-primary d-block text-truncate">@convo.JobTitle</small>
                                    <p class="mb-0 text-muted small text-truncate">
                                        @if (!string.IsNullOrEmpty(convo.LastMessage))
                                        {
                                            @(convo.LastMessage.Length > 50 ? convo.LastMessage.Substring(0, 50) + "..." : convo.LastMessage)
                                        }
                                        else
                                        {
                                            <em>No messages yet</em>
                                        }
                                    </p>
                                </div>
                                @if (convo.UnreadCount > 0)
                                {
                                    <span class="badge bg-primary rounded-pill ms-2">@convo.UnreadCount</span>
                                }
                            </div>
                        </a>
                    }
                </div>

                @if (totalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => LoadPage(currentPage - 1)">Previous</button>
                            </li>
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                    <button class="page-link" @onclick="() => LoadPage(pageNum)">@pageNum</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => LoadPage(currentPage + 1)">Next</button>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    }
</div>

<style>
    .avatar {
        width: 48px;
        height: 48px;
        background: #e7f1ff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        color: #0d6efd;
        flex-shrink: 0;
    }

    .min-width-0 {
        min-width: 0;
    }

    .list-group-item-action:hover {
        background-color: #f8f9fa;
    }
</style>

@code {
    private List<ConversationDto> conversations = new();
    private bool isLoading = true;
    private bool isConnected = false;
    private int currentPage = 1;
    private int totalPages = 1;
    private const int PageSize = 20;

    protected override async Task OnInitializedAsync()
    {
        await AuthState.InitializeAsync();
        if (AuthState.IsAuthenticated)
        {
            await LoadConversations();
            await ConnectSignalR();
        }
        else
        {
            isLoading = false;
        }
    }

    private async Task ConnectSignalR()
    {
        SignalR.OnConnectionStateChanged += HandleConnectionStateChanged;
        SignalR.OnMessageReceived += HandleMessageReceived;
        await SignalR.ConnectAsync();
    }

    private void HandleConnectionStateChanged(bool connected)
    {
        isConnected = connected;
        InvokeAsync(StateHasChanged);
    }

    private void HandleMessageReceived(MessageDto message)
    {
        // Refresh conversations to get updated last message and unread count
        InvokeAsync(async () =>
        {
            await LoadConversations();
            StateHasChanged();
        });
    }

    private async Task LoadConversations()
    {
        isLoading = true;
        var response = await MessagesService.GetConversationsAsync(currentPage, PageSize);
        if (response != null)
        {
            conversations = response.Conversations;
            totalPages = (int)Math.Ceiling((double)response.TotalCount / PageSize);
        }
        isLoading = false;
    }

    private async Task LoadPage(int page)
    {
        if (page < 1 || page > totalPages) return;
        currentPage = page;
        await LoadConversations();
    }

    private string FormatTime(DateTime? dateTime)
    {
        if (dateTime == null) return "";

        var local = dateTime.Value.ToLocalTime();
        var now = DateTime.Now;

        if (local.Date == now.Date)
            return local.ToString("h:mm tt");
        if (local.Date == now.Date.AddDays(-1))
            return "Yesterday";
        if ((now - local).TotalDays < 7)
            return local.ToString("ddd");
        return local.ToString("MMM d");
    }

    public ValueTask DisposeAsync()
    {
        SignalR.OnConnectionStateChanged -= HandleConnectionStateChanged;
        SignalR.OnMessageReceived -= HandleMessageReceived;
        return ValueTask.CompletedTask;
    }
}
