@page "/tradie/map"
@using Quote.Shared.DTOs
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation


<PageTitle>Job Map - Quote</PageTitle>

<div class="job-map-page">
    <!-- Header -->
    <div class="map-header">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center py-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="header-icon">
                        <i class="bi bi-map"></i>
                    </div>
                    <div>
                        <h1 class="h4 mb-0 fw-bold">Job Map</h1>
                        <p class="text-muted mb-0 small">Find jobs near your location</p>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-light" @onclick="RefreshJobs" disabled="@isLoading">
                        <i class="bi bi-arrow-clockwise @(isLoading ? "spin" : "")"></i>
                    </button>
                    <button class="btn btn-primary" @onclick="CenterOnMe">
                        <i class="bi bi-crosshairs me-2"></i>My Location
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Bar -->
    <div class="stats-bar">
        <div class="container-fluid">
            <div class="d-flex gap-4 py-2">
                <div class="stat-item">
                    <i class="bi bi-briefcase text-primary"></i>
                    <span><strong>@markers.Count</strong> jobs</span>
                </div>
                <div class="stat-item">
                    <i class="bi bi-lightning-fill text-danger"></i>
                    <span><strong>@markers.Count(m => m.IsUrgent)</strong> urgent</span>
                </div>
                <div class="stat-item">
                    <i class="bi bi-geo-alt text-success"></i>
                    <span><strong>@clusters.Count</strong> suburbs</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="map-content">
        <div class="row g-0 h-100">
            <!-- Map -->
            <div class="col-lg-8 col-xl-9 h-100">
                <div class="map-container">
                    @if (isLoading && !mapInitialized)
                    {
                        <div class="map-loading">
                            <div class="spinner-border text-primary mb-3"></div>
                            <p class="mb-0">Loading map...</p>
                        </div>
                    }
                    <div id="jobMap" class="map-element"></div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4 col-xl-3 h-100">
                <div class="sidebar">
                    <!-- Search -->
                    <div class="sidebar-search">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-start-0" placeholder="Search suburbs..." @bind="searchQuery" @bind:event="oninput">
                        </div>
                    </div>

                    <!-- Clusters List -->
                    <div class="clusters-section">
                        <h6 class="section-title">
                            <i class="bi bi-pin-map me-2"></i>Jobs by Suburb
                        </h6>

                        @if (isLoading)
                        {
                            <div class="text-center py-4">
                                <div class="spinner-border spinner-border-sm text-primary"></div>
                            </div>
                        }
                        else if (FilteredClusters.Any())
                        {
                            <div class="cluster-list">
                                @foreach (var cluster in FilteredClusters.Take(15))
                                {
                                    <button class="cluster-item @(selectedCluster?.Postcode == cluster.Postcode ? "active" : "")"
                                            @onclick="() => SelectCluster(cluster)">
                                        <div class="cluster-info">
                                            <div class="cluster-name">@cluster.SuburbName</div>
                                            <div class="cluster-postcode">@cluster.Postcode</div>
                                        </div>
                                        <div class="cluster-badges">
                                            <span class="badge bg-primary">@cluster.JobCount</span>
                                            @if (cluster.UrgentCount > 0)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-lightning-fill"></i> @cluster.UrgentCount
                                                </span>
                                            }
                                        </div>
                                    </button>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="bi bi-inbox"></i>
                                <p>No jobs found</p>
                            </div>
                        }
                    </div>

                    <!-- Selected Job Card -->
                    @if (selectedMarker != null)
                    {
                        <div class="selected-job">
                            <div class="selected-job-header">
                                <h6>@selectedMarker.Title</h6>
                                <button class="btn-close btn-close-white btn-sm" @onclick="() => selectedMarker = null"></button>
                            </div>
                            <div class="selected-job-body">
                                <div class="job-meta">
                                    <span><i class="bi bi-geo-alt"></i> @selectedMarker.SuburbName</span>
                                    <span><i class="bi bi-tools"></i> @selectedMarker.TradeCategoryName</span>
                                </div>
                                @if (selectedMarker.BudgetMax.HasValue)
                                {
                                    <div class="job-budget">
                                        $@selectedMarker.BudgetMax.Value.ToString("N0")
                                    </div>
                                }
                                @if (selectedMarker.IsUrgent)
                                {
                                    <span class="badge bg-danger mb-3">
                                        <i class="bi bi-lightning-fill me-1"></i>Urgent Job
                                    </span>
                                }
                                <a href="/tradie/quote/@selectedMarker.JobId" class="btn btn-primary w-100">
                                    <i class="bi bi-send-fill me-2"></i>Quick Quote
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
