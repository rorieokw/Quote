@page "/disputes"
@using Quote.Shared.DTOs
@using Quote.Web.Client.Services
@inject DisputeService DisputeService
@inject NavigationManager Navigation

<PageTitle>My Disputes - Quote</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">My Disputes</h1>
            <p class="text-muted mb-0">View and manage your disputes</p>
        </div>
        <a href="/disputes/file" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>File New Dispute
        </a>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
        </div>
    }

    <!-- Status Filter -->
    <div class="mb-4">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <button class="nav-link @(statusFilter == "" ? "active" : "")" @onclick="() => FilterByStatus(null)">
                    All
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(statusFilter == "Open" ? "active" : "")" @onclick='() => FilterByStatus("Open")'>
                    Open
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(statusFilter == "UnderReview" ? "active" : "")" @onclick='() => FilterByStatus("UnderReview")'>
                    Under Review
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(statusFilter == "Resolved" ? "active" : "")" @onclick='() => FilterByStatus("Resolved")'>
                    Resolved
                </button>
            </li>
        </ul>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-2">Loading disputes...</p>
        </div>
    }
    else if (!disputes.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-shield-check fs-1 text-success"></i>
            <h5 class="mt-3">No disputes</h5>
            <p class="text-muted">You don't have any disputes.</p>
            <a href="/disputes/file" class="btn btn-outline-primary">File a Dispute</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var dispute in disputes)
            {
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                            <span class="badge @GetStatusBadgeClass(dispute.Status)">@dispute.Status</span>
                            <small class="text-muted">@dispute.CreatedAt.ToString("dd MMM yyyy")</small>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@dispute.JobTitle</h5>
                            <p class="card-text text-muted small mb-2">
                                <span class="badge @GetReasonBadgeClass(dispute.Reason) me-2">@dispute.Reason</span>
                                Quote: <strong>$@dispute.QuoteAmount.ToString("N0")</strong>
                            </p>
                            <p class="card-text">@TruncateText(dispute.Description, 100)</p>

                            @if (!string.IsNullOrEmpty(dispute.OtherPartyName))
                            {
                                <p class="mb-0 small text-muted">
                                    <i class="bi bi-person me-1"></i>With: @dispute.OtherPartyName
                                </p>
                            }

                            @if (dispute.Status == "Resolved" && !string.IsNullOrEmpty(dispute.Resolution))
                            {
                                <div class="alert alert-success py-2 px-3 mt-3 mb-0">
                                    <small>
                                        <strong>Resolution:</strong> @dispute.ResolutionType
                                        @if (dispute.RefundAmount.HasValue)
                                        {
                                            <span> - Refund: $@dispute.RefundAmount.Value.ToString("N2")</span>
                                        }
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    @if (dispute.Evidence.Any())
                                    {
                                        <i class="bi bi-paperclip me-1"></i><text>@dispute.Evidence.Count files</text>
                                    }
                                </small>
                                <div>
                                    @if (dispute.Status == "Open")
                                    {
                                        <button class="btn btn-sm btn-outline-secondary me-2" @onclick="() => WithdrawDispute(dispute.Id)">
                                            Withdraw
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-primary" @onclick="() => ViewDispute(dispute)">
                                        View Details
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage - 1)">Previous</button>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        var pageNum = i;
                        <li class="page-item @(currentPage == pageNum ? "active" : "")">
                            <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage + 1)">Next</button>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<!-- Dispute Detail Modal -->
@if (showDetailModal && selectedDispute != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Dispute Details</h5>
                    <button type="button" class="btn-close" @onclick="CloseDetailModal"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h4>@selectedDispute.JobTitle</h4>
                            <span class="badge @GetReasonBadgeClass(selectedDispute.Reason) me-2">@selectedDispute.Reason</span>
                            <span class="badge @GetStatusBadgeClass(selectedDispute.Status)">@selectedDispute.Status</span>
                        </div>
                        <div class="text-end">
                            <p class="h4 text-success mb-0">$@selectedDispute.QuoteAmount.ToString("N2")</p>
                            <small class="text-muted">Quote Amount</small>
                        </div>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6>Description</h6>
                            <p class="mb-0">@selectedDispute.Description</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Filed by:</strong> @selectedDispute.RaisedByName</p>
                            <p class="mb-0"><strong>Filed on:</strong> @selectedDispute.CreatedAt.ToString("dd MMM yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(selectedDispute.OtherPartyName))
                            {
                                <p class="mb-1"><strong>Other party:</strong> @selectedDispute.OtherPartyName</p>
                            }
                        </div>
                    </div>

                    @if (selectedDispute.Evidence.Any())
                    {
                        <h6>Evidence</h6>
                        <div class="list-group mb-4">
                            @foreach (var evidence in selectedDispute.Evidence)
                            {
                                <a href="@evidence.FileUrl" target="_blank" class="list-group-item list-group-item-action">
                                    <i class="bi bi-file-earmark me-2"></i>@evidence.FileName
                                    <small class="text-muted ms-2">by @evidence.UploadedByName</small>
                                </a>
                            }
                        </div>
                    }

                    @if (selectedDispute.Status == "Resolved")
                    {
                        <div class="alert alert-success">
                            <h6><i class="bi bi-check-circle me-2"></i>Resolution</h6>
                            <p class="mb-1"><strong>Decision:</strong> @selectedDispute.ResolutionType</p>
                            @if (selectedDispute.RefundAmount.HasValue)
                            {
                                <p class="mb-1"><strong>Refund:</strong> $@selectedDispute.RefundAmount.Value.ToString("N2")</p>
                            }
                            @if (!string.IsNullOrEmpty(selectedDispute.Resolution))
                            {
                                <p class="mb-1"><strong>Notes:</strong> @selectedDispute.Resolution</p>
                            }
                            @if (selectedDispute.ResolvedAt.HasValue)
                            {
                                <small class="text-muted">Resolved on @selectedDispute.ResolvedAt.Value.ToString("dd MMM yyyy")</small>
                            }
                        </div>
                    }
                    else if (selectedDispute.Status == "Closed")
                    {
                        <div class="alert alert-secondary">
                            <h6><i class="bi bi-x-circle me-2"></i>Closed</h6>
                            @if (!string.IsNullOrEmpty(selectedDispute.Resolution))
                            {
                                <p class="mb-0">@selectedDispute.Resolution</p>
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDetailModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<DisputeDto> disputes = new();
    private bool isLoading = true;
    private string statusFilter = "";
    private int currentPage = 1;
    private int totalPages = 1;
    private string? errorMessage;

    // Detail modal
    private bool showDetailModal = false;
    private DisputeDto? selectedDispute;

    protected override async Task OnInitializedAsync()
    {
        await LoadDisputes();
    }

    private async Task LoadDisputes()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await DisputeService.GetMyDisputesAsync(
                string.IsNullOrEmpty(statusFilter) ? null : statusFilter,
                currentPage,
                10
            );

            if (response != null)
            {
                disputes = response.Disputes;
                totalPages = (int)Math.Ceiling(response.TotalCount / 10.0);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load disputes: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task FilterByStatus(string? status)
    {
        statusFilter = status ?? "";
        currentPage = 1;
        await LoadDisputes();
    }

    private async Task GoToPage(int page)
    {
        if (page < 1 || page > totalPages) return;
        currentPage = page;
        await LoadDisputes();
    }

    private void ViewDispute(DisputeDto dispute)
    {
        selectedDispute = dispute;
        showDetailModal = true;
    }

    private void CloseDetailModal()
    {
        showDetailModal = false;
        selectedDispute = null;
    }

    private async Task WithdrawDispute(Guid disputeId)
    {
        try
        {
            var success = await DisputeService.CloseDisputeAsync(disputeId, "Withdrawn by user");
            if (success)
            {
                await LoadDisputes();
            }
            else
            {
                errorMessage = "Failed to withdraw dispute.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Open" => "bg-warning text-dark",
        "UnderReview" => "bg-info",
        "Resolved" => "bg-success",
        "Closed" => "bg-secondary",
        _ => "bg-dark"
    };

    private string GetReasonBadgeClass(string reason) => reason switch
    {
        "WorkQuality" => "bg-danger",
        "NonCompletion" => "bg-warning text-dark",
        "PaymentIssue" => "bg-info",
        "Communication" => "bg-secondary",
        _ => "bg-dark"
    };

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text.Substring(0, maxLength) + "...";
    }
}
