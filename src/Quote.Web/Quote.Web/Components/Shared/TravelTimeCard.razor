@using Quote.Shared.DTOs
@inject IJSRuntime JSRuntime

<div class="card border-0 shadow-sm mb-3">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                    <i class="bi bi-car-front fs-4 text-primary"></i>
                </div>
                <div>
                    @if (IsLoading)
                    {
                        <div class="d-flex align-items-center">
                            <div class="spinner-border spinner-border-sm text-primary me-2"></div>
                            <span class="text-muted">Calculating travel time...</span>
                        </div>
                    }
                    else if (TravelInfo != null)
                    {
                        <h5 class="mb-0">@TravelInfo.EstimatedTravelMinutes min drive</h5>
                        <small class="text-muted">@TravelInfo.DistanceKm km from your location</small>
                    }
                    else if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <span class="text-danger"><i class="bi bi-exclamation-circle me-1"></i>@ErrorMessage</span>
                    }
                    else
                    {
                        <button class="btn btn-outline-primary btn-sm" @onclick="GetLocation">
                            <i class="bi bi-geo-alt me-1"></i>Calculate Travel Time
                        </button>
                    }
                </div>
            </div>
            @if (TravelInfo != null)
            {
                <div class="text-end">
                    @if (TravelInfo.EstimatedTravelMinutes <= 15)
                    {
                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Nearby</span>
                    }
                    else if (TravelInfo.EstimatedTravelMinutes <= 30)
                    {
                        <span class="badge bg-warning text-dark"><i class="bi bi-clock me-1"></i>Moderate</span>
                    }
                    else
                    {
                        <span class="badge bg-danger"><i class="bi bi-exclamation-triangle me-1"></i>Far</span>
                    }
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid JobId { get; set; }

    [Parameter]
    public JobWithTravelDto? TravelInfo { get; set; }

    [Parameter]
    public EventCallback<(double lat, double lng)> OnLocationObtained { get; set; }

    private bool IsLoading { get; set; }
    private string? ErrorMessage { get; set; }

    private async Task GetLocation()
    {
        IsLoading = true;
        ErrorMessage = null;
        StateHasChanged();

        try
        {
            var position = await JSRuntime.InvokeAsync<GeolocationResult>("geolocation.getCurrentPosition");
            await OnLocationObtained.InvokeAsync((position.Latitude, position.Longitude));
        }
        catch (Exception ex)
        {
            ErrorMessage = "Could not get your location. Please enable location services.";
            Console.WriteLine($"Geolocation error: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private class GeolocationResult
    {
        public double Latitude { get; set; }
        public double Longitude { get; set; }
        public double Accuracy { get; set; }
    }
}
