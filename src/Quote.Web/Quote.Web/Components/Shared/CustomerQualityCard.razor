@using Quote.Shared.DTOs

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h6 class="mb-0">@Quality?.CustomerName</h6>
                <small class="text-muted">Customer Profile</small>
            </div>
            @if (Quality != null)
            {
                <span class="badge @GetQualityBadgeClass()">
                    @GetQualityLabel()
                </span>
            }
        </div>

        @if (Quality != null)
        {
            <div class="row g-3 text-center">
                <div class="col-4">
                    <h5 class="mb-0 @(Quality.JobsCompleted > 0 ? "text-success" : "text-muted")">
                        @Quality.JobsCompleted
                    </h5>
                    <small class="text-muted">Jobs Completed</small>
                </div>
                <div class="col-4">
                    <h5 class="mb-0 @(Quality.CompletionRate >= 0.8m ? "text-success" : Quality.CompletionRate >= 0.5m ? "text-warning" : "text-danger")">
                        @((Quality.CompletionRate * 100).ToString("N0"))%
                    </h5>
                    <small class="text-muted">Completion Rate</small>
                </div>
                <div class="col-4">
                    <h5 class="mb-0 @(Quality.AcceptanceRate >= 0.3m ? "text-success" : "text-warning")">
                        @((Quality.AcceptanceRate * 100).ToString("N0"))%
                    </h5>
                    <small class="text-muted">Quote Acceptance</small>
                </div>
            </div>

            @if (Quality.IsTyreKicker)
            {
                <div class="alert alert-warning mt-3 mb-0 py-2">
                    <small>
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        This customer has requested @Quality.QuotesRequestedLast30Days quotes in the last 30 days
                        but only accepted @Quality.QuotesAcceptedLast30Days. Consider your time investment carefully.
                    </small>
                </div>
            }
            else if (Quality.JobsCompleted >= 5 && Quality.CompletionRate >= 0.9m)
            {
                <div class="alert alert-success mt-3 mb-0 py-2">
                    <small>
                        <i class="bi bi-check-circle me-1"></i>
                        Reliable customer with strong completion history.
                    </small>
                </div>
            }

            @if (Quality.AverageJobValue.HasValue)
            {
                <div class="mt-3 pt-3 border-top">
                    <div class="d-flex justify-content-between">
                        <small class="text-muted">Average Job Value</small>
                        <strong>$@Quality.AverageJobValue.Value.ToString("N0")</strong>
                    </div>
                    @if (Quality.AverageTimeToAcceptHours.HasValue)
                    {
                        <div class="d-flex justify-content-between mt-1">
                            <small class="text-muted">Avg. Response Time</small>
                            <strong>@FormatResponseTime(Quality.AverageTimeToAcceptHours.Value)</strong>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-3">
                <i class="bi bi-person-circle fs-1"></i>
                <p class="mb-0 mt-2">New customer - no history yet</p>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public CustomerQualityDto? Quality { get; set; }

    private string GetQualityBadgeClass()
    {
        if (Quality == null) return "bg-secondary";
        if (Quality.IsTyreKicker) return "bg-warning text-dark";
        if (Quality.CompletionRate >= 0.8m && Quality.JobsCompleted >= 3) return "bg-success";
        if (Quality.CompletionRate >= 0.5m) return "bg-primary";
        return "bg-secondary";
    }

    private string GetQualityLabel()
    {
        if (Quality == null) return "Unknown";
        if (Quality.IsTyreKicker) return "Low Intent";
        if (Quality.CompletionRate >= 0.8m && Quality.JobsCompleted >= 5) return "Excellent";
        if (Quality.CompletionRate >= 0.8m && Quality.JobsCompleted >= 3) return "Good";
        if (Quality.JobsCompleted >= 1) return "Verified";
        return "New";
    }

    private string FormatResponseTime(double hours)
    {
        if (hours < 1) return $"{(int)(hours * 60)} mins";
        if (hours < 24) return $"{hours:N0} hrs";
        return $"{(hours / 24):N0} days";
    }
}
