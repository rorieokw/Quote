    [Parameter]
    public Guid JobId { get; set; }

    private Toast? toast;
    private JobDto? job;
    private bool isLoading = true;
    private bool showQuoteForm = false;
    private bool isSubmitting = false;
    private bool quoteSubmitted = false;
    private string quoteError = "";

    private decimal labourCost = 0;
    private int estimatedHours = 0;
    private string notes = "";

    // Materials
    private bool showMaterialsPanel = false;
    private List<MaterialItemModel> materialItems = new();
    private List<MaterialBundleDto> savedBundles = new();
    private bool saveAsBundle = false;
    private string newBundleName = "";

    // Photo Markup
    private bool showPhotoPanel = false;
    private bool showMarkupComponent = false;
    private string selectedPhotoUrl = "";
    private List<PhotoAnnotationModel> photoAnnotations = new();

    // Price Benchmarking
    private PriceBenchmarkDto? priceBenchmark;
    private bool isBenchmarkLoading = false;
    private bool benchmarkNoData = false;

    private class PhotoAnnotationModel
    {
        public string ImageBase64 { get; set; } = "";
        public string AnnotationJson { get; set; } = "";
        public string? OriginalMediaUrl { get; set; }
    }

    // Material item model for local editing
    private class MaterialItemModel
    {
        public string ProductName { get; set; } = "";
        public string? SupplierName { get; set; }
        public string? ProductUrl { get; set; }
        public decimal Quantity { get; set; } = 1;
        public string? Unit { get; set; }
        public decimal UnitPrice { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await Auth.InitializeAsync();
        await LoadJob();
        if (Auth.IsAuthenticated && Auth.IsTradie)
        {
            await LoadSavedBundles();
        }
    }

    private async Task LoadSavedBundles()
    {
        try
        {
            savedBundles = await Api.GetMaterialBundlesAsync();
        }
        catch
        {
            savedBundles = new();
        }
    }

    private async Task LoadJob()
    {
        isLoading = true;
        try
        {
            job = await Api.GetJobAsync(JobId);
        }
        catch { }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ShowQuoteForm()
    {
        showQuoteForm = true;
        await LoadPriceBenchmark();
    }

    private async Task LoadPriceBenchmark()
    {
        if (job == null || !job.TradeCategoryId.HasValue)
        {
            benchmarkNoData = true;
            return;
        }

        isBenchmarkLoading = true;
        benchmarkNoData = false;
        priceBenchmark = null;
        StateHasChanged();

        try
        {
            priceBenchmark = await Api.GetPriceBenchmarkAsync(job.TradeCategoryId.Value, job.Postcode);
            benchmarkNoData = priceBenchmark == null;
        }
        catch
        {
            benchmarkNoData = true;
        }
        finally
        {
            isBenchmarkLoading = false;
            StateHasChanged();
        }
    }

    private void CancelQuote()
    {
        showQuoteForm = false;
        quoteError = "";
        materialItems.Clear();
        showMaterialsPanel = false;
        saveAsBundle = false;
        newBundleName = "";
        photoAnnotations.Clear();
        showPhotoPanel = false;
        priceBenchmark = null;
        benchmarkNoData = false;
    }

    private void ToggleMaterialsPanel()
    {
        showMaterialsPanel = !showMaterialsPanel;
    }

    private void TogglePhotoPanel()
    {
        showPhotoPanel = !showPhotoPanel;
    }

    private void OpenPhotoMarkup(string mediaUrl)
    {
        selectedPhotoUrl = mediaUrl;
        showMarkupComponent = true;
    }

    private void OnMarkupCancel()
    {
        showMarkupComponent = false;
        selectedPhotoUrl = "";
    }

    private void OnMarkupSave(PhotoMarkup.MarkupResult result)
    {
        photoAnnotations.Add(new PhotoAnnotationModel
        {
            ImageBase64 = result.AnnotatedImageBase64,
            AnnotationJson = result.AnnotationJson,
            OriginalMediaUrl = selectedPhotoUrl
        });
        showMarkupComponent = false;
        selectedPhotoUrl = "";
        StateHasChanged();
    }

    private void RemoveAnnotation(PhotoAnnotationModel annotation)
    {
        photoAnnotations.Remove(annotation);
    }

    private void AddMaterialItem()
    {
        materialItems.Add(new MaterialItemModel());
    }

    private void RemoveMaterialItem(int index)
    {
        if (index >= 0 && index < materialItems.Count)
        {
            materialItems.RemoveAt(index);
        }
    }

    private async Task OnBundleSelected(ChangeEventArgs e)
    {
        if (Guid.TryParse(e.Value?.ToString(), out var bundleId))
        {
            var bundle = await Api.GetMaterialBundleAsync(bundleId);
            if (bundle != null)
            {
                materialItems.Clear();
                foreach (var item in bundle.Items)
                {
                    materialItems.Add(new MaterialItemModel
                    {
                        ProductName = item.ProductName,
                        SupplierName = item.SupplierName,
                        ProductUrl = item.ProductUrl,
                        Quantity = item.DefaultQuantity,
                        Unit = item.Unit,
                        UnitPrice = item.EstimatedUnitPrice
                    });
                }
            }
        }
    }

    private decimal CalculateMaterialsTotal()
    {
        return materialItems.Sum(m => m.Quantity * m.UnitPrice);
    }

    private async Task SubmitQuote()
    {
        quoteError = "";

        if (labourCost <= 0)
        {
            quoteError = "Please enter a labour cost";
            return;
        }

        if (estimatedHours <= 0)
        {
            quoteError = "Please enter estimated hours";
            return;
        }

        // Validate save as bundle
        if (saveAsBundle && string.IsNullOrWhiteSpace(newBundleName))
        {
            quoteError = "Please enter a name for the bundle";
            return;
        }

        isSubmitting = true;

        try
        {
            // Convert material items to request DTOs
            var materials = materialItems
                .Where(m => !string.IsNullOrWhiteSpace(m.ProductName) && m.Quantity > 0)
                .Select(m => new QuoteMaterialRequest(
                    m.ProductName,
                    m.SupplierName,
                    m.ProductUrl,
                    m.Quantity,
                    m.Unit,
                    m.UnitPrice
                ))
                .ToList();

            var materialsCost = materials.Any() ? CalculateMaterialsTotal() : (decimal?)null;

            var request = new QuickQuoteRequest(
                JobId,
                labourCost,
                materialsCost,
                estimatedHours,
                string.IsNullOrWhiteSpace(notes) ? null : notes,
                null, // TemplateId
                null, // ProposedStartDate
                false, // DepositRequired
                null, // DepositPercentage
                materials.Any() ? materials : null,
                null, // MaterialBundleId
                saveAsBundle,
                saveAsBundle ? newBundleName : null
            );

            var success = await Api.SubmitQuoteAsync(request);
            if (success)
            {
                showQuoteForm = false;
                quoteSubmitted = true;
                materialItems.Clear();
                showMaterialsPanel = false;
                saveAsBundle = false;
                newBundleName = "";
                photoAnnotations.Clear();
                showPhotoPanel = false;
                toast?.ShowSuccess("Quote submitted successfully! The customer will be notified.");

                // Reload bundles if a new one was saved
                if (saveAsBundle)
                {
                    await LoadSavedBundles();
                }
            }
            else
            {
                quoteError = "Failed to submit quote. Please try again.";
                toast?.ShowError("Failed to submit quote");
            }
        }
        catch
        {
            quoteError = "Connection error. Please try again.";
            toast?.ShowError("Connection error. Please try again.");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private string GetTimeAgo(DateTime date)
    {
        var diff = DateTime.UtcNow - date;
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes} minutes ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours} hours ago";
        if (diff.TotalDays < 7) return $"{(int)diff.TotalDays} days ago";
        return date.ToString("d MMM yyyy");
    }

