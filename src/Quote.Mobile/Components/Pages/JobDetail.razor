@page "/job/{JobId:guid}"
@using Quote.Mobile.Components.Shared
@inject ApiService Api
@inject AuthService Auth
@inject NavigationManager Navigation

<Toast @ref="toast" />
<PhotoMarkup
    IsVisible="showMarkupComponent"
    ImageUrl="@selectedPhotoUrl"
    OnCancel="OnMarkupCancel"
    OnSave="OnMarkupSave" />

<div class="job-detail-page">
    @if (isLoading)
    {
        <div class="loading-center">
            <div class="loader"></div>
        </div>
    }
    else if (job == null)
    {
        <div class="error-state">
            <div class="error-icon">üòï</div>
            <h2>Job not found</h2>
            <p>This job may have been removed</p>
            <button class="btn-primary" @onclick="GoBack">Go Back</button>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="detail-header">
            <button class="back-btn" @onclick="GoBack">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
            </button>
            <h1>Job Details</h1>
            <div class="spacer"></div>
        </div>

        <!-- Content -->
        <div class="detail-content">
            <!-- Status & Category -->
            <div class="job-badges">
                <span class="category-badge">@job.TradeCategoryName</span>
                <span class="status-badge @job.Status.ToLower()">@job.Status</span>
            </div>

            <!-- Title -->
            <h2 class="job-title">@job.Title</h2>

            <!-- Info Cards -->
            <div class="info-grid">
                <div class="info-card">
                    <span class="info-icon">üìç</span>
                    <div class="info-text">
                        <span class="info-label">Location</span>
                        <span class="info-value">@job.SuburbName, @job.State @job.Postcode</span>
                    </div>
                </div>
                @if (job.BudgetMax.HasValue)
                {
                    <div class="info-card">
                        <span class="info-icon">üí∞</span>
                        <div class="info-text">
                            <span class="info-label">Budget</span>
                            <span class="info-value budget">
                                @if (job.BudgetMin.HasValue)
                                {
                                    @:$@job.BudgetMin.Value.ToString("N0") - $@job.BudgetMax.Value.ToString("N0")
                                }
                                else
                                {
                                    @:Up to $@job.BudgetMax.Value.ToString("N0")
                                }
                            </span>
                        </div>
                    </div>
                }
                <div class="info-card">
                    <span class="info-icon">üìÖ</span>
                    <div class="info-text">
                        <span class="info-label">Posted</span>
                        <span class="info-value">@GetTimeAgo(job.CreatedAt)</span>
                    </div>
                </div>
                <div class="info-card">
                    <span class="info-icon">üìù</span>
                    <div class="info-text">
                        <span class="info-label">Quotes</span>
                        <span class="info-value">@job.QuoteCount received</span>
                    </div>
                </div>
            </div>

            <!-- Description -->
            <div class="section-card">
                <h3>Description</h3>
                <p>@job.Description</p>
            </div>

            <!-- Schedule -->
            <div class="section-card">
                <h3>Schedule</h3>
                @if (job.PreferredStartDate.HasValue)
                {
                    <div class="detail-row">
                        <span class="detail-label">Preferred Start</span>
                        <span class="detail-value">@job.PreferredStartDate.Value.ToString("d MMM yyyy")</span>
                    </div>
                }
                <div class="detail-row">
                    <span class="detail-label">Flexible Dates</span>
                    <span class="detail-value">@(job.IsFlexibleDates ? "Yes" : "No")</span>
                </div>
            </div>

            <!-- Customer -->
            <div class="section-card customer">
                <div class="customer-avatar">
                    @(job.CustomerName.Substring(0, 1).ToUpper())
                </div>
                <div class="customer-info">
                    <span class="customer-name">@job.CustomerName</span>
                    <span class="customer-label">Posted this job</span>
                </div>
            </div>
        </div>

        <!-- Quote Button -->
        @if (Auth.IsAuthenticated && Auth.IsTradie)
        {
            <div class="quote-footer">
                @if (showQuoteForm)
                {
                    <div class="quote-form">
                        <h3>Submit Your Quote</h3>

                        @if (!string.IsNullOrEmpty(quoteError))
                        {
                            <div class="quote-error">@quoteError</div>
                        }

                        <!-- Price Benchmark -->
                        <PriceBenchmarkHint
                            Benchmark="@priceBenchmark"
                            YourPrice="@(labourCost + CalculateMaterialsTotal())"
                            IsLoading="@isBenchmarkLoading"
                            NoDataAvailable="@benchmarkNoData" />

                        <div class="form-row">
                            <div class="form-group">
                                <label>Labour Cost *</label>
                                <div class="input-prefix">
                                    <span>$</span>
                                    <input type="number" @bind="labourCost" placeholder="0" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Materials Total</label>
                                <div class="materials-total-display">$@CalculateMaterialsTotal().ToString("N2")</div>
                            </div>
                        </div>

                        <!-- Materials Section -->
                        <div class="materials-section">
                            <div class="materials-header" @onclick="ToggleMaterialsPanel">
                                <span class="materials-title">Material Items (@materialItems.Count)</span>
                                <span class="materials-toggle">@(showMaterialsPanel ? "‚àí" : "+")</span>
                            </div>

                            @if (showMaterialsPanel)
                            {
                                <div class="materials-panel">
                                    <!-- Bundle Selector -->
                                    @if (savedBundles.Any())
                                    {
                                        <div class="bundle-selector">
                                            <select @onchange="OnBundleSelected">
                                                <option value="">Load from saved bundle...</option>
                                                @foreach (var bundle in savedBundles)
                                                {
                                                    <option value="@bundle.Id">@bundle.Name (@bundle.ItemCount items - $@bundle.TotalCost.ToString("N0"))</option>
                                                }
                                            </select>
                                        </div>
                                    }

                                    <!-- Material Items List -->
                                    @foreach (var (item, index) in materialItems.Select((m, i) => (m, i)))
                                    {
                                        <div class="material-item">
                                            <div class="material-item-row">
                                                <input type="text" @bind="item.ProductName" placeholder="Product name *" class="material-input product" />
                                                <button class="remove-item-btn" @onclick="() => RemoveMaterialItem(index)">√ó</button>
                                            </div>
                                            <div class="material-item-row details">
                                                <input type="number" @bind="item.Quantity" placeholder="Qty" class="material-input qty" step="0.01" />
                                                <input type="text" @bind="item.Unit" placeholder="Unit" class="material-input unit" />
                                                <div class="input-prefix price">
                                                    <span>$</span>
                                                    <input type="number" @bind="item.UnitPrice" placeholder="Price" step="0.01" />
                                                </div>
                                                <span class="item-total">$@((item.Quantity * item.UnitPrice).ToString("N2"))</span>
                                            </div>
                                            <input type="text" @bind="item.SupplierName" placeholder="Supplier (optional)" class="material-input full" />
                                        </div>
                                    }

                                    <button class="add-material-btn" @onclick="AddMaterialItem">+ Add Material</button>

                                    <!-- Save as Bundle -->
                                    @if (materialItems.Any())
                                    {
                                        <div class="save-bundle-row">
                                            <label class="checkbox-label">
                                                <input type="checkbox" @bind="saveAsBundle" />
                                                <span>Save as bundle for future use</span>
                                            </label>
                                            @if (saveAsBundle)
                                            {
                                                <input type="text" @bind="newBundleName" placeholder="Bundle name" class="bundle-name-input" />
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Photo Markup Section -->
                        @if (job?.MediaUrls != null && job.MediaUrls.Any())
                        {
                            <div class="photo-markup-section">
                                <div class="materials-header" @onclick="TogglePhotoPanel">
                                    <span class="materials-title">Photo Notes (@photoAnnotations.Count)</span>
                                    <span class="materials-toggle">@(showPhotoPanel ? "‚àí" : "+")</span>
                                </div>

                                @if (showPhotoPanel)
                                {
                                    <div class="photo-panel">
                                        <p class="photo-hint">Tap a photo to add markup notes</p>
                                        <div class="photo-grid">
                                            @foreach (var mediaUrl in job.MediaUrls)
                                            {
                                                <div class="photo-thumb" @onclick="() => OpenPhotoMarkup(mediaUrl)">
                                                    <img src="@mediaUrl" alt="Job photo" />
                                                    <div class="photo-overlay">
                                                        <span>+ Add Notes</span>
                                                    </div>
                                                </div>
                                            }
                                        </div>

                                        @if (photoAnnotations.Any())
                                        {
                                            <div class="annotations-list">
                                                <h4>Your Annotations</h4>
                                                @foreach (var annotation in photoAnnotations)
                                                {
                                                    <div class="annotation-thumb">
                                                        <img src="@annotation.ImageBase64" alt="Annotated photo" />
                                                        <button class="remove-annotation-btn" @onclick="() => RemoveAnnotation(annotation)">√ó</button>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }

                        <div class="form-group">
                            <label>Estimated Hours *</label>
                            <input type="number" @bind="estimatedHours" placeholder="e.g., 4" />
                        </div>

                        <div class="form-group">
                            <label>Notes (optional)</label>
                            <textarea @bind="notes" placeholder="Add any notes for the customer..."></textarea>
                        </div>

                        <div class="total-row">
                            <span>Total Quote</span>
                            <span class="total-amount">$@((labourCost + CalculateMaterialsTotal()).ToString("N2"))</span>
                        </div>

                        <div class="form-actions">
                            <button class="btn-cancel" @onclick="CancelQuote">Cancel</button>
                            <button class="btn-submit" @onclick="SubmitQuote" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <div class="btn-loader"></div>
                                }
                                else
                                {
                                    <span>Submit Quote</span>
                                }
                            </button>
                        </div>
                    </div>
                }
                else if (quoteSubmitted)
                {
                    <div class="quote-success">
                        <span class="success-icon">‚úì</span>
                        <span>Quote submitted successfully!</span>
                    </div>
                }
                else
                {
                    <button class="btn-quote" @onclick="ShowQuoteForm">
                        Submit Quote
                    </button>
                }
            </div>
        }
        else if (!Auth.IsAuthenticated)
        {
            <div class="quote-footer">
                <button class="btn-quote" @onclick="GoToLogin">
                    Sign In to Quote
                </button>
            </div>
        }
    }
</div>

