    }

    .material-input:focus {
        outline: none;
        border-color: #0d6efd;
        background: white;
    }

    .material-input.product {
        flex: 1;
    }

    .material-input.qty {
        width: 55px;
    }

    .material-input.unit {
        width: 55px;
    }

    .material-input.full {
        width: 100%;
        margin-top: 8px;
    }

