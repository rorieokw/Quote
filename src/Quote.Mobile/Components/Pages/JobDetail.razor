        display: flex;
        gap: 10px;
        margin-bottom: 14px;
    }

    .category-badge {
        background: #e7f1ff;
        color: #0d6efd;
        font-size: 0.75rem;
        font-weight: 600;
        padding: 6px 14px;
        border-radius: 10px;
    }

    .status-badge {
        font-size: 0.75rem;
        font-weight: 600;
        padding: 6px 14px;
        border-radius: 10px;
    }

