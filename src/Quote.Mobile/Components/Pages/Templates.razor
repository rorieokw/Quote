    }

    .total-price {
        font-size: 1rem;
        font-weight: 700;
        color: #10b981;
    }

    /* Error State */
    .error-state {
        background: white;
        border-radius: 20px;
        padding: 48px 24px;
        text-align: center;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    }

    .error-icon {
        margin-bottom: 16px;
    }

    .error-state h3 {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1f2937;
        margin: 0 0 8px;
    }

    .error-state p {
        color: #6b7280;
        margin: 0 0 20px;
        font-size: 0.9375rem;
    }

    .btn-retry {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: #0d6efd;
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 0.9375rem;
        font-weight: 600;
        cursor: pointer;
    }

    /* Empty State */
    .empty-state {
        background: white;
        border-radius: 20px;
        padding: 48px 24px;
        text-align: center;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 16px;
    }

    .empty-state h3 {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1f2937;
        margin: 0 0 8px;
    }

    .empty-state p {
        color: #6b7280;
        margin: 0 0 24px;
        font-size: 0.9375rem;
    }

    /* FAB */
    .fab {
        position: fixed;
        bottom: 100px;
        right: 20px;
        width: 56px;
        height: 56px;
        background: #0d6efd;
        border: none;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        cursor: pointer;
        box-shadow: 0 8px 24px rgba(13, 110, 253, 0.4);
        z-index: 100;
    }

    .fab:active {
        transform: scale(0.95);
    }

    /* Bottom Navigation */
    .bottom-nav {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: white;
        display: flex;
        justify-content: space-around;
        padding: 8px 0;
        padding-bottom: max(8px, env(safe-area-inset-bottom));
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.06);
        z-index: 1000;
        border-radius: 24px 24px 0 0;
    }

    .nav-tab {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        padding: 8px 16px;
        color: #9ca3af;
        text-decoration: none;
        font-size: 0.6875rem;
        font-weight: 500;
        transition: color 0.2s;
    }

    .nav-tab.active {
        color: #0d6efd;
    }

    .nav-tab svg {
        width: 24px;
        height: 24px;
    }
</style>

@code {
    private Toast? toast;
    private bool isInitialized = false;
    private bool isLoading = true;
    private bool hasError = false;
    private List<QuoteTemplateDto> templates = new();

    protected override async Task OnInitializedAsync()
    {
        await Auth.InitializeAsync();
        isInitialized = true;

        if (Auth.IsAuthenticated && Auth.IsTradie)
        {
            await LoadTemplates();
        }
    }

    private async Task LoadTemplates()
    {
        isLoading = true;
        hasError = false;
        StateHasChanged();

        try
        {
            templates = await Api.GetTemplatesAsync();
        }
        catch
        {
            hasError = true;
            toast?.ShowError("Failed to load templates. Pull down to retry.");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshTemplates()
    {
        hasError = false;
        try
        {
            templates = await Api.GetTemplatesAsync();
            toast?.ShowSuccess("Templates refreshed!");
        }
        catch
        {
            hasError = templates.Count == 0;
            toast?.ShowError("Failed to refresh templates");
        }
        StateHasChanged();
    }

    private void CreateTemplate()
    {
        toast?.ShowInfo("Template creation coming soon!");
    }

    private void GoToLogin() => Navigation.NavigateTo("/login");
    private void GoBack() => Navigation.NavigateTo("/profile");
}
