    }

    .template-name {
        font-size: 1.0625rem;
        font-weight: 700;
        color: #1f2937;
        margin: 0 0 6px;
    }

    .template-desc {
        font-size: 0.875rem;
        color: #6b7280;
        margin: 0 0 14px;
        line-height: 1.4;
    }

    .template-pricing {
        display: flex;
        gap: 16px;
        padding: 12px 0;
        border-top: 1px solid #f3f4f6;
