@page "/templates"
@using Quote.Mobile.Components.Shared
@inject ApiService Api
@inject AuthService Auth
@inject NavigationManager Navigation

<Toast @ref="toast" />

<div class="templates-page">
    @if (!isInitialized)
    {
        <div class="loading-center">
            <div class="loader"></div>
        </div>
    }
    else if (!Auth.IsAuthenticated || !Auth.IsTradie)
    {
        <div class="not-auth">
            <div class="not-auth-icon">ðŸ”’</div>
            <h2>Tradie access only</h2>
            <p>Templates are available for registered tradies</p>
            <button class="btn-primary" @onclick="GoToLogin">Sign In</button>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="page-header">
            <button class="back-btn" @onclick="GoBack">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
            </button>
            <div class="header-text">
                <h1>Quote Templates</h1>
                <p>Speed up your quoting process</p>
            </div>
        </div>

        <!-- Content -->
        <PullToRefresh OnRefresh="RefreshTemplates">
            <div class="page-content">
                @if (isLoading && !templates.Any())
                {
                    <!-- Skeleton Loading -->
                    <div class="stats-row">
                        <div class="stat-box"><Skeleton Width="40px" Height="28px" /><Skeleton Width="60px" Height="14px" /></div>
                        <div class="stat-box"><Skeleton Width="40px" Height="28px" /><Skeleton Width="60px" Height="14px" /></div>
                    </div>
                    <div class="templates-list">
                        <SkeletonCard Type="generic" />
                        <SkeletonCard Type="generic" />
                        <SkeletonCard Type="generic" />
                    </div>
                }
                else if (hasError)
                {
                    <div class="error-state">
                        <div class="error-icon">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#ef4444" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="12" y1="8" x2="12" y2="12"/>
                                <line x1="12" y1="16" x2="12.01" y2="16"/>
                            </svg>
                        </div>
                        <h3>Unable to load templates</h3>
                        <p>Please check your connection and try again</p>
                        <button class="btn-retry" @onclick="LoadTemplates">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M23 4v6h-6M1 20v-6h6"/>
                                <path d="M3.51 9a9 9 0 0114.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0020.49 15"/>
                            </svg>
                            Retry
                        </button>
                    </div>
                }
                else if (templates.Any())
                {
                    <!-- Stats -->
                    <div class="stats-row">
                        <div class="stat-box">
                            <span class="stat-num">@templates.Count</span>
                            <span class="stat-label">Templates</span>
                        </div>
                        <div class="stat-box green">
                            <span class="stat-num">@templates.Sum(t => t.UsageCount)</span>
                            <span class="stat-label">Times Used</span>
                        </div>
                    </div>

                    <!-- Templates List -->
                    <div class="templates-list">
                        @foreach (var template in templates.OrderByDescending(t => t.UsageCount))
                        {
                            <div class="template-card @(!template.IsActive ? "inactive" : "")">
                                <div class="template-header">
                                    <span class="template-category">@template.TradeCategoryName</span>
                                    @if (!template.IsActive)
                                    {
                                        <span class="template-badge inactive">Inactive</span>
                                    }
                                    else
                                    {
                                        <span class="template-badge active">Active</span>
                                    }
                                </div>
                                <h3 class="template-name">@template.Name</h3>
                                @if (!string.IsNullOrEmpty(template.Description))
                                {
                                    <p class="template-desc">@template.Description</p>
                                }
                                <div class="template-pricing">
                                    <div class="price-item">
                                        <span class="price-label">Labour</span>
                                        <span class="price-value">$@template.DefaultLabourCost.ToString("N0")</span>
                                    </div>
                                    @if (template.DefaultMaterialsCost.HasValue)
                                    {
                                        <div class="price-item">
                                            <span class="price-label">Materials</span>
                                            <span class="price-value">$@template.DefaultMaterialsCost.Value.ToString("N0")</span>
                                        </div>
                                    }
                                    <div class="price-item">
                                        <span class="price-label">Duration</span>
                                        <span class="price-value">@template.DefaultDurationHours hrs</span>
                                    </div>
                                </div>
                                <div class="template-footer">
                                    <span class="usage-count">Used @template.UsageCount times</span>
                                    <span class="total-price">
                                        Total: $@((template.DefaultLabourCost + (template.DefaultMaterialsCost ?? 0)).ToString("N0"))
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">âš¡</div>
                        <h3>No templates yet</h3>
                        <p>Create templates to speed up your quoting process</p>
                        <button class="btn-primary" @onclick="CreateTemplate">
                            Create Template
                        </button>
                    </div>
                }
            </div>
        </PullToRefresh>

        <!-- FAB -->
        @if (templates.Any())
        {
            <button class="fab" @onclick="CreateTemplate">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
            </button>
        }

        <!-- Bottom Navigation -->
        <nav class="bottom-nav">
            <a class="nav-tab" href="/">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                <span>Home</span>
            </a>
            <a class="nav-tab" href="/jobs">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.3-4.3"></path>
                </svg>
                <span>Jobs</span>
            </a>
            <a class="nav-tab" href="/messages">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                </svg>
                <span>Messages</span>
            </a>
            <a class="nav-tab" href="/profile">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Profile</span>
            </a>
        </nav>
    }
</div>

<style>
    .templates-page {
        min-height: 100vh;
        background: #f8f9fc;
        padding-bottom: 100px;
    }

    .loading-center {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .loading-center.small {
        min-height: 200px;
    }

    .loader {
        width: 40px;
        height: 40px;
        border: 3px solid #e8eaed;
        border-top-color: #0d6efd;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin { to { transform: rotate(360deg); } }

    .not-auth {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 24px;
        text-align: center;
    }

    .not-auth-icon {
        font-size: 4rem;
        margin-bottom: 16px;
    }

    .not-auth h2 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1f2937;
        margin: 0 0 8px;
    }

    .not-auth p {
        color: #6b7280;
        margin: 0 0 24px;
    }

    .btn-primary {
        padding: 14px 32px;
        background: #0d6efd;
        color: white;
        border: none;
        border-radius: 14px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 8px 24px rgba(13, 110, 253, 0.3);
    }

    /* Header */
    .page-header {
        background: #0d6efd;
        padding: 20px;
        display: flex;
        align-items: flex-start;
        gap: 16px;
    }

    .back-btn {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        cursor: pointer;
        flex-shrink: 0;
    }

    .header-text h1 {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin: 0 0 4px;
    }

    .header-text p {
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.85);
        margin: 0;
    }

    /* Content */
    .page-content {
        padding: 20px 16px;
        margin-top: -16px;
    }

    /* Stats Row */
    .stats-row {
        display: flex;
        gap: 12px;
        margin-bottom: 24px;
    }

    .stat-box {
        flex: 1;
        background: white;
        border-radius: 16px;
        padding: 16px;
        text-align: center;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    }

    .stat-num {
        display: block;
        font-size: 1.5rem;
        font-weight: 700;
        color: #0d6efd;
    }

    .stat-box.green .stat-num {
        color: #10b981;
    }

    .stat-label {
        font-size: 0.75rem;
        color: #6b7280;
        font-weight: 500;
    }

    /* Templates List */
    .templates-list {
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    .template-card {
        background: white;
        border-radius: 20px;
        padding: 18px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    }

    .template-card.inactive {
        opacity: 0.7;
    }

    .template-header {
        display: flex;
        justify-content: space-between;
