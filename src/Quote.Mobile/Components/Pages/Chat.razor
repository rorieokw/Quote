@page "/chat/{ConversationId:guid}"
@using Quote.Mobile.Services
@inject ApiService Api
@inject AuthService Auth
@inject SignalRService SignalR
@inject NavigationManager Navigation
@implements IAsyncDisposable

<div class="chat-page">
    @if (!isInitialized)
    {
        <div class="loading-center">
            <div class="loader"></div>
        </div>
    }
    else if (!Auth.IsAuthenticated)
    {
        <div class="not-auth">
            <div class="not-auth-icon">üîí</div>
            <h2>Sign in required</h2>
            <p>Please sign in to view messages</p>
            <button class="btn-primary" @onclick="GoToLogin">Sign In</button>
        </div>
    }
    else if (conversation == null)
    {
        <div class="not-found">
            <div class="not-found-icon">üîç</div>
            <h2>Conversation not found</h2>
            <button class="btn-primary" @onclick="GoBack">Go Back</button>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="chat-header">
            <button class="back-btn" @onclick="GoBack">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
            </button>
            <div class="header-info">
                <div class="avatar-small">
                    @(conversation.OtherParty.Name?.Substring(0, 1).ToUpper() ?? "?")
                </div>
                <div class="header-text">
                    <h1>@conversation.OtherParty.Name</h1>
                    @if (otherUserTyping)
                    {
                        <p class="typing">typing...</p>
                    }
                    else
                    {
                        <p>@conversation.JobTitle</p>
                    }
                </div>
                @if (isConnected)
                {
                    <div class="live-indicator"></div>
                }
            </div>
            <button class="job-btn" @onclick="ViewJob">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                </svg>
            </button>
        </div>

        <!-- Messages -->
        <div class="messages-container" @ref="messagesContainer">
            @if (isLoading)
            {
                <div class="loading-messages">
                    <div class="loader small"></div>
                </div>
            }
            else
            {
                @foreach (var message in conversation.Messages)
                {
                    <div class="message @(message.IsMine ? "mine" : "theirs") @(message.IsSystemMessage ? "system" : "")">
                        @if (message.IsSystemMessage)
                        {
                            <div class="system-message">@message.Content</div>
                        }
                        else
                        {
                            <div class="message-bubble">
                                <p>@message.Content</p>
                                @if (!string.IsNullOrEmpty(message.MediaUrl))
                                {
                                    @if (message.MediaType == "image")
                                    {
                                        <img src="@message.MediaUrl" alt="Attached image" class="message-image" />
                                    }
                                    else
                                    {
                                        <a href="@message.MediaUrl" target="_blank" class="message-file">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                                <polyline points="14 2 14 8 20 8"></polyline>
                                            </svg>
                                            @(message.FileName ?? "Attachment")
                                        </a>
                                    }
                                }
                                <span class="message-time">@FormatTime(message.SentAt)</span>
                            </div>
                        }
                    </div>
                }
            }
        </div>

        <!-- Input -->
        <div class="chat-input">
            <input type="text"
                   value="@newMessage"
                   @oninput="HandleInput"
                   @onkeypress="HandleKeyPress"
                   placeholder="Type a message..."
                   disabled="@isSending" />
            <button class="send-btn" @onclick="SendMessage" disabled="@(isSending || string.IsNullOrWhiteSpace(newMessage))">
                @if (isSending)
                {
                    <div class="btn-loader"></div>
                }
                else
                {
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="22" y1="2" x2="11" y2="13"></line>
                        <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                    </svg>
                }
            </button>
        </div>
    }
</div>

