{
    <!-- Dashboard for Authenticated Users -->
    <div class="app-page">
        <!-- Header -->
        <div class="app-header">
            <div class="header-left">
                <div class="user-avatar" @onclick="GoToProfile">
                    @(Auth.FirstName?.Substring(0, 1).ToUpper() ?? "U")
                </div>
                <div class="header-greeting">
                    <span class="greeting-hello">Hello, @Auth.FirstName</span>
                    <span class="greeting-date">@DateTime.Now.ToString("dddd, d MMM")</span>
                </div>
            </div>
            <div class="header-right">
                <button class="header-icon-btn">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.3-4.3"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Stats Hero Card -->
        <div class="hero-stats-card">
            <div class="stats-deco">
                <div class="stat-bubble b1"></div>
                <div class="stat-bubble b2"></div>
            </div>
            <div class="stats-content">
                <h2>Your Activity</h2>
                <p>Track your quotes and jobs</p>
                <div class="stats-row">
                    <div class="stat-item">
                        <span class="stat-num">@quotesCount</span>
                        <span class="stat-label">Active</span>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <span class="stat-num">@wonCount</span>
                        <span class="stat-label">Won</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Grid -->
        <div class="section">
            <h3 class="section-title">Quick Actions</h3>
            <div class="actions-grid">
                <button class="action-tile" @onclick="GoToJobs">
                    <div class="tile-icon blue">
                        <span>üîç</span>
                    </div>
                    <span class="tile-label">Find Jobs</span>
                </button>
                <button class="action-tile" @onclick="GoToMyQuotes">
                    <div class="tile-icon green">
                        <span>üìÑ</span>
                    </div>
                    <span class="tile-label">My Quotes</span>
                </button>
                <button class="action-tile" @onclick="GoToTemplates">
                    <div class="tile-icon orange">
                        <span>‚ö°</span>
                    </div>
                    <span class="tile-label">Templates</span>
                </button>
                <button class="action-tile" @onclick='() => Navigation.NavigateTo("/tradie/map")'>
                    <div class="tile-icon purple">
                        <span>üó∫Ô∏è</span>
                    </div>
                    <span class="tile-label">Job Map</span>
                </button>
            </div>
        </div>

        <!-- Recent Jobs -->
        <div class="section">
            <div class="section-header">
                <h3 class="section-title">New Jobs</h3>
                <button class="see-all" @onclick="GoToJobs">See all</button>
            </div>

            @if (isLoadingJobs)
            {
                <div class="loading-jobs">
                    <div class="loader small"></div>
                </div>
            }
            else if (recentJobs.Any())
            {
                <div class="jobs-grid">
                    @foreach (var job in recentJobs.Take(4))
                    {
                        <div class="job-tile" @onclick="() => GoToJob(job.Id)">
                            <div class="job-tag">@job.TradeCategoryName</div>
                            <h4 class="job-name">@job.Title</h4>
                            <div class="job-location">
                                <span>üìç</span> @job.SuburbName
                            </div>
                            @if (job.BudgetMax.HasValue)
                            {
                                <div class="job-budget">$@job.BudgetMax.Value.ToString("N0")</div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-card">
                    <span class="empty-emoji">üì≠</span>
                    <p>No new jobs nearby</p>
                    <button class="btn-browse" @onclick="GoToJobs">Browse All</button>
                </div>
            }
        </div>

        <!-- Bottom Spacer for Nav -->
        <div class="bottom-spacer"></div>
    </div>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav">
        <a class="nav-tab active" href="/">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
            </svg>
            <span>Home</span>
        </a>
        <a class="nav-tab" href="/jobs">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.3-4.3"></path>
            </svg>
            <span>Jobs</span>
        </a>
        <a class="nav-tab" href="/messages">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
            <span>Messages</span>
        </a>
        <a class="nav-tab" href="/profile">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
