@page "/"
@inject AuthService Auth
@inject ApiService Api
@inject NavigationManager Navigation

@if (!isInitialized)
{
    <div class="loading-screen">
        <div class="loader"></div>
    </div>
}
else if (!Auth.IsAuthenticated)
{
    <!-- Welcome Screen for Non-Authenticated Users -->
    <div class="welcome-page">
        <div class="welcome-header">
            <div class="logo-circle">
                <span>Q</span>
            </div>
        </div>

        <div class="welcome-hero">
            <div class="hero-card">
                <div class="hero-decoration">
                    <div class="deco-circle c1"></div>
                    <div class="deco-circle c2"></div>
                    <div class="deco-circle c3"></div>
                </div>
                <div class="hero-text">
                    <h1>Find trusted<br/>tradies</h1>
                    <p>Post jobs & compare quotes from verified professionals</p>
                </div>
            </div>
        </div>

        <div class="welcome-features">
            <div class="feature-row">
                <div class="feature-card purple">
                    <span class="feature-icon">‚úì</span>
                    <span class="feature-text">Verified<br/>Licences</span>
                </div>
                <div class="feature-card blue">
                    <span class="feature-icon">üîí</span>
                    <span class="feature-text">Secure<br/>Payments</span>
                </div>
                <div class="feature-card orange">
                    <span class="feature-icon">‚≠ê</span>
                    <span class="feature-text">Trusted<br/>Reviews</span>
                </div>
            </div>
        </div>

        <div class="welcome-actions">
            <button class="btn-get-started" @onclick="GoToRegister">
                Get Started
            </button>
            <button class="btn-signin" @onclick="GoToLogin">
                Already have an account? <span>Sign In</span>
            </button>
        </div>
    </div>
}
