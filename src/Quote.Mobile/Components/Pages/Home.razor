@code {
    private bool isInitialized = false;
    private bool isLoadingJobs = true;
    private List<JobDto> recentJobs = new();
    private int quotesCount = 0;
    private int wonCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await Auth.InitializeAsync();
        isInitialized = true;

        if (Auth.IsAuthenticated)
        {
            await LoadDashboardData();
        }
    }

    private async Task LoadDashboardData()
    {
        isLoadingJobs = true;
        StateHasChanged();

        try
        {
            recentJobs = await Api.GetJobsAsync();
            var quotes = await Api.GetMyQuotesAsync();
            quotesCount = quotes.Count(q => q.Status == "Pending");
            wonCount = quotes.Count(q => q.Status == "Accepted");
        }
        catch { }
        finally
        {
            isLoadingJobs = false;
            StateHasChanged();
        }
    }

    private void GoToJob(Guid jobId) => Navigation.NavigateTo($"/job/{jobId}");
    private void GoToLogin() => Navigation.NavigateTo("/login");
    private void GoToRegister() => Navigation.NavigateTo("/register");
    private void GoToProfile() => Navigation.NavigateTo("/profile");
    private void GoToJobs() => Navigation.NavigateTo("/jobs");
    private void GoToMyQuotes() => Navigation.NavigateTo("/my-quotes");
    private void GoToTemplates() => Navigation.NavigateTo("/templates");
}
