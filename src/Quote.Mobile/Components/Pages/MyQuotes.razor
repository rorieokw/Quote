    }

    /* Empty State */
    .empty-state {
        background: white;
        border-radius: 20px;
        padding: 48px 24px;
        text-align: center;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 16px;
    }

    .empty-state h3 {
        font-size: 1.125rem;
        font-weight: 700;
