@page "/my-quotes"
@using Quote.Mobile.Components.Shared
@inject ApiService Api
@inject AuthService Auth
@inject NavigationManager Navigation

<Toast @ref="toast" />

<div class="quotes-page">
    @if (!isInitialized)
    {
        <div class="loading-center">
            <div class="loader"></div>
        </div>
    }
    else if (!Auth.IsAuthenticated)
    {
        <div class="not-auth">
            <div class="not-auth-icon">üîí</div>
            <h2>Sign in required</h2>
            <p>Please sign in to view your quotes</p>
            <button class="btn-primary" @onclick="GoToLogin">Sign In</button>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="page-header">
            <h1>My Quotes</h1>
            <p>Track your submitted quotes</p>
        </div>

        <!-- Content -->
        <PullToRefresh OnRefresh="RefreshQuotes">
            <div class="page-content">
                @if (isLoading && !quotes.Any())
                {
                    <!-- Skeleton Loading -->
                    <div class="stats-row">
                        <div class="stat-box"><Skeleton Width="40px" Height="28px" /><Skeleton Width="50px" Height="14px" /></div>
                        <div class="stat-box"><Skeleton Width="40px" Height="28px" /><Skeleton Width="50px" Height="14px" /></div>
                        <div class="stat-box"><Skeleton Width="40px" Height="28px" /><Skeleton Width="50px" Height="14px" /></div>
                    </div>
                    <div class="quotes-list">
                        <SkeletonCard Type="quote" />
                        <SkeletonCard Type="quote" />
                        <SkeletonCard Type="quote" />
                    </div>
                }
                else if (hasError)
                {
                    <div class="error-state">
                        <div class="error-icon">
                            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#ef4444" stroke-width="2">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="12" y1="8" x2="12" y2="12"/>
                                <line x1="12" y1="16" x2="12.01" y2="16"/>
                            </svg>
                        </div>
                        <h3>Unable to load quotes</h3>
                        <p>Please check your connection and try again</p>
                        <button class="btn-retry" @onclick="LoadQuotes">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M23 4v6h-6M1 20v-6h6"/>
                                <path d="M3.51 9a9 9 0 0114.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0020.49 15"/>
                            </svg>
                            Retry
                        </button>
                    </div>
                }
                else if (quotes.Any())
                {
                    <!-- Stats Row -->
                    <div class="stats-row">
                        <div class="stat-box">
                            <span class="stat-num">@quotes.Count(q => q.Status == "Pending")</span>
                            <span class="stat-label">Pending</span>
                        </div>
                        <div class="stat-box green">
                            <span class="stat-num">@quotes.Count(q => q.Status == "Accepted")</span>
                            <span class="stat-label">Accepted</span>
                        </div>
                        <div class="stat-box red">
                            <span class="stat-num">@quotes.Count(q => q.Status == "Rejected")</span>
                            <span class="stat-label">Rejected</span>
                        </div>
                    </div>

                    <!-- Quotes List -->
                    <div class="quotes-list">
                        @foreach (var quote in quotes.OrderByDescending(q => q.CreatedAt))
                        {
                            <div class="quote-card">
                                <div class="quote-header">
                                    <span class="quote-status @quote.Status.ToLower()">@quote.Status</span>
                                    <span class="quote-amount">$@quote.TotalCost.ToString("N0")</span>
                                </div>
                                <h3 class="quote-title">@quote.JobTitle</h3>
                                <div class="quote-meta">
                                    <span>üìç @quote.JobSuburb</span>
                                    <span>üìÖ @quote.CreatedAt.ToString("d MMM yyyy")</span>
                                </div>
                                <div class="quote-info">
                                    <span>üëÅÔ∏è @quote.ViewCount views</span>
                                    <span>üìä @quote.CompetingQuotes competing</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">üìÑ</div>
                        <h3>No quotes yet</h3>
                        <p>Start browsing jobs and submit your first quote</p>
                        <button class="btn-primary" @onclick="GoToJobs">
                            Browse Jobs
                        </button>
                    </div>
                }
            </div>
        </PullToRefresh>

        <!-- Bottom Navigation -->
        <nav class="bottom-nav">
            <a class="nav-tab" href="/">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                <span>Home</span>
            </a>
            <a class="nav-tab" href="/jobs">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.3-4.3"></path>
                </svg>
                <span>Jobs</span>
            </a>
            <a class="nav-tab" href="/messages">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                </svg>
                <span>Messages</span>
            </a>
            <a class="nav-tab" href="/profile">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Profile</span>
            </a>
        </nav>
    }
</div>

<style>
