        display: flex;
        justify-content: space-around;
        padding: 8px 0;
        padding-bottom: max(8px, env(safe-area-inset-bottom));
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.06);
        z-index: 1000;
        border-radius: 24px 24px 0 0;
    }

    .nav-tab {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        padding: 8px 16px;
        color: #9ca3af;
        text-decoration: none;
        font-size: 0.6875rem;
        font-weight: 500;
        transition: color 0.2s;
    }

    .nav-tab.active {
        color: #0d6efd;
    }

    .nav-tab svg {
        width: 24px;
        height: 24px;
    }
</style>

@code {
    private Toast? toast;
    private bool isInitialized = false;
    private bool isLoading = true;
    private bool hasError = false;
    private List<QuoteStatusDto> quotes = new();

    protected override async Task OnInitializedAsync()
    {
        await Auth.InitializeAsync();
        isInitialized = true;

        if (Auth.IsAuthenticated)
        {
            await LoadQuotes();
        }
    }

    private async Task LoadQuotes()
    {
        isLoading = true;
        hasError = false;
        StateHasChanged();

        try
        {
            quotes = await Api.GetMyQuotesAsync();
        }
        catch
        {
            hasError = true;
            toast?.ShowError("Failed to load quotes. Pull down to retry.");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshQuotes()
    {
        hasError = false;
        try
        {
            quotes = await Api.GetMyQuotesAsync();
            toast?.ShowSuccess("Quotes refreshed!");
        }
        catch
        {
            hasError = quotes.Count == 0;
            toast?.ShowError("Failed to refresh quotes");
        }
        StateHasChanged();
    }

    private void GoToLogin() => Navigation.NavigateTo("/login");
    private void GoToJobs() => Navigation.NavigateTo("/jobs");
}
