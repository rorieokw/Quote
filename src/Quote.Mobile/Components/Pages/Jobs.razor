@page "/jobs"
@using Quote.Mobile.Components.Shared
@inject ApiService Api
@inject AuthService Auth
@inject NavigationManager Navigation

<Toast @ref="toast" />

<div class="jobs-page">
    <!-- Header -->
    <div class="page-header">
        <h1>Browse Jobs</h1>
        <p>Find work opportunities near you</p>
    </div>

    <!-- Content -->
    <PullToRefresh OnRefresh="RefreshJobs">
        <div class="page-content">
            @if (isLoading && !jobs.Any())
            {
                <!-- Skeleton Loading -->
                <div class="jobs-list">
                    <SkeletonCard Type="job" />
                    <SkeletonCard Type="job" />
                    <SkeletonCard Type="job" />
                </div>
            }
            else if (hasError)
            {
                <div class="error-state">
                    <div class="error-icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#ef4444" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                    </div>
                    <h3>Unable to load jobs</h3>
                    <p>Please check your connection and try again</p>
                    <button class="btn-retry" @onclick="LoadJobs">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M23 4v6h-6M1 20v-6h6"/>
                            <path d="M3.51 9a9 9 0 0114.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0020.49 15"/>
                        </svg>
                        Retry
                    </button>
                </div>
            }
            else if (jobs.Any())
            {
                <div class="jobs-list">
                    @foreach (var job in jobs)
                    {
                        <div class="job-card" @onclick="() => GoToJob(job.Id)">
                            <div class="job-top">
                                <span class="job-category">@job.TradeCategoryName</span>
                                @if (job.BudgetMax.HasValue)
                                {
                                    <span class="job-budget">$@job.BudgetMax.Value.ToString("N0")</span>
                                }
                            </div>
                            <h3 class="job-title">@job.Title</h3>
                            @if (!string.IsNullOrEmpty(job.Description))
                            {
                                <p class="job-desc">@job.Description</p>
                            }
                            <div class="job-meta">
                                <span class="meta-item">
                                    <span>üìç</span> @job.SuburbName
                                </span>
                                @if (!string.IsNullOrEmpty(job.Postcode))
                                {
                                    <span class="meta-item">
                                        <span>üìÆ</span> @job.Postcode
                                    </span>
                                }
                            </div>
                            <div class="job-footer">
                                <span class="job-date">Posted @GetTimeAgo(job.CreatedAt)</span>
                                <span class="job-quotes">@job.QuoteCount quotes</span>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">üîç</div>
                    <h3>No jobs available</h3>
                    <p>Check back later for new opportunities</p>
                </div>
            }
        </div>
    </PullToRefresh>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav">
        <a class="nav-tab" href="/">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            <span>Home</span>
        </a>
        <a class="nav-tab active" href="/jobs">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.3-4.3" stroke="white" stroke-width="2"></path>
            </svg>
            <span>Jobs</span>
        </a>
        <a class="nav-tab" href="/messages">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
            <span>Messages</span>
        </a>
        <a class="nav-tab" href="/profile">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span>Profile</span>
        </a>
    </nav>
</div>

<style>
