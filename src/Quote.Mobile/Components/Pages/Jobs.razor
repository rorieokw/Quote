        background: #0d6efd;
        padding: 24px 20px 32px;
        color: white;
    }

    .page-header h1 {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 0 4px;
    }

    .page-header p {
        font-size: 0.875rem;
        opacity: 0.85;
        margin: 0;
    }

    /* Content */
    .page-content {
        padding: 20px 16px;
        margin-top: -16px;
    }

    /* Jobs List */
    .jobs-list {
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    .job-card {
        background: white;
        border-radius: 20px;
        padding: 18px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
        cursor: pointer;
        transition: transform 0.15s, box-shadow 0.15s;
    }

    .job-card:active {
        transform: scale(0.98);
        box-shadow: 0 1px 6px rgba(0, 0, 0, 0.08);
    }

    .job-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .job-category {
        background: #e7f1ff;
        color: #0d6efd;
        font-size: 0.75rem;
        font-weight: 600;
        padding: 5px 12px;
        border-radius: 10px;
    }

    .job-budget {
        font-size: 1.125rem;
        font-weight: 700;
        color: #10b981;
    }

    .job-title {
        font-size: 1.0625rem;
        font-weight: 600;
        color: #1f2937;
        margin: 0 0 8px;
        line-height: 1.4;
    }

