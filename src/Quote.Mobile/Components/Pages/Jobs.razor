        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .job-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        margin-bottom: 12px;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.8125rem;
        color: #6b7280;
    }

    .job-footer {
        display: flex;
        justify-content: space-between;
        padding-top: 12px;
        border-top: 1px solid #f3f4f6;
        font-size: 0.75rem;
        color: #9ca3af;
    }

    .job-quotes {
        color: #0d6efd;
        font-weight: 600;
    }

    /* Error State */
    .error-state {
        background: white;
        border-radius: 20px;
        padding: 48px 24px;
        text-align: center;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    }

    .error-icon {
        margin-bottom: 16px;
    }

    .error-state h3 {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1f2937;
        margin: 0 0 8px;
    }

    .error-state p {
        color: #6b7280;
        margin: 0 0 20px;
        font-size: 0.9375rem;
    }

    .btn-retry {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: #0d6efd;
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 0.9375rem;
        font-weight: 600;
        cursor: pointer;
    }

    /* Empty State */
    .empty-state {
        background: white;
        border-radius: 20px;
        padding: 48px 24px;
        text-align: center;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 16px;
    }

    .empty-state h3 {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1f2937;
        margin: 0 0 8px;
    }

    .empty-state p {
        color: #6b7280;
        margin: 0;
        font-size: 0.9375rem;
    }

    /* Bottom Navigation */
    .bottom-nav {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: white;
        display: flex;
        justify-content: space-around;
        padding: 8px 0;
        padding-bottom: max(8px, env(safe-area-inset-bottom));
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.06);
        z-index: 1000;
        border-radius: 24px 24px 0 0;
    }

    .nav-tab {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        padding: 8px 16px;
        color: #9ca3af;
        text-decoration: none;
        font-size: 0.6875rem;
        font-weight: 500;
        transition: color 0.2s;
    }

    .nav-tab.active {
        color: #0d6efd;
    }

    .nav-tab svg {
        width: 24px;
        height: 24px;
    }
</style>

@code {
    private Toast? toast;
    private bool isLoading = true;
    private bool hasError = false;
    private List<JobDto> jobs = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadJobs();
    }

    private async Task LoadJobs()
    {
        isLoading = true;
        hasError = false;
        StateHasChanged();

        try
        {
            jobs = await Api.GetJobsAsync();
        }
        catch
        {
            hasError = true;
            toast?.ShowError("Failed to load jobs. Pull down to retry.");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshJobs()
    {
        hasError = false;
        try
        {
            jobs = await Api.GetJobsAsync();
            toast?.ShowSuccess("Jobs refreshed!");
        }
        catch
        {
            hasError = jobs.Count == 0;
            toast?.ShowError("Failed to refresh jobs");
        }
        StateHasChanged();
    }

    private void GoToJob(Guid jobId)
    {
        Navigation.NavigateTo($"/job/{jobId}");
    }

    private string GetTimeAgo(DateTime date)
    {
        var diff = DateTime.UtcNow - date;
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        if (diff.TotalDays < 7) return $"{(int)diff.TotalDays}d ago";
        return date.ToString("d MMM");
    }
}
