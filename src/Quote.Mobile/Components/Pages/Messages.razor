@code {
    private Toast? toast;
    private bool isInitialized = false;
    private bool isLoading = true;
    private bool hasError = false;
    private bool isConnected = false;
    private List<ConversationDto> conversations = new();

    protected override async Task OnInitializedAsync()
    {
        await Auth.InitializeAsync();
        isInitialized = true;

        if (Auth.IsAuthenticated)
        {
            await LoadConversations();
            await ConnectSignalR();
        }
    }

    private async Task ConnectSignalR()
    {
        SignalR.OnConnectionStateChanged += HandleConnectionStateChanged;
        SignalR.OnMessageReceived += HandleMessageReceived;
        await SignalR.ConnectAsync();
    }

    private void HandleConnectionStateChanged(bool connected)
    {
        isConnected = connected;
        InvokeAsync(StateHasChanged);
    }

    private void HandleMessageReceived(MessageDto message)
    {
        InvokeAsync(async () =>
        {
            await LoadConversations();
            StateHasChanged();
        });
    }

    private async Task LoadConversations()
    {
        isLoading = true;
        hasError = false;
        StateHasChanged();

        try
        {
            var response = await Api.GetConversationsAsync();
            conversations = response?.Conversations ?? new();
        }
        catch
        {
            hasError = true;
            toast?.ShowError("Failed to load messages. Pull down to retry.");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshConversations()
    {
        hasError = false;
        try
        {
            var response = await Api.GetConversationsAsync();
            conversations = response?.Conversations ?? new();
            toast?.ShowSuccess("Messages refreshed!");
        }
        catch
        {
            hasError = conversations.Count == 0;
            toast?.ShowError("Failed to refresh messages");
        }
        StateHasChanged();
    }

    private void OpenConversation(Guid conversationId)
    {
        Navigation.NavigateTo($"/chat/{conversationId}");
    }

    private string FormatTime(DateTime? dateTime)
    {
        if (dateTime == null) return "";

        var local = dateTime.Value.ToLocalTime();
        var now = DateTime.Now;

        if (local.Date == now.Date)
            return local.ToString("h:mm tt");
        if (local.Date == now.Date.AddDays(-1))
            return "Yesterday";
        if ((now - local).TotalDays < 7)
            return local.ToString("ddd");
        return local.ToString("MMM d");
    }

    private void GoToLogin() => Navigation.NavigateTo("/login");
    private void GoBack() => Navigation.NavigateTo("/");

    public ValueTask DisposeAsync()
    {
        SignalR.OnConnectionStateChanged -= HandleConnectionStateChanged;
        SignalR.OnMessageReceived -= HandleMessageReceived;
        return ValueTask.CompletedTask;
    }
}
